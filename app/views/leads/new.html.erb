<div class="container mt-5">
  <h1><%= @customer.name %></h1>
  <h4><%= @customer.phone_number %> | <%= @customer.email %></h4>
  <p><%= @customer.address %></p>
  <%= simple_form_for [@customer, @lead] do |f| %>
  <%= f.input :status, collection: [ "New", "In process", "Won", "Lost" ] %>
  <%= f.input :follow_up_date %>
  <%= f.input :comments %>
  <%= f.button :submit, class: "btn btn-flat"  %>
  <% end %>
</div>
